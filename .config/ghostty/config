# general
title = "DevLuchOps"
font-family = JetBrainsMono Nerd Font Mono
font-feature = -calt, -liga, -dlig
font-size =  16

theme = tokyonight_night
shell-integration-features = sudo,no-cursor  
window-padding-balance = true
window-save-state = always
window-colorspace = display-p3

# keybindings
keybind = cmd+s>r=reload_config
keybind = cmd+s>x=close_surface

keybind = cmd+s>n=new_window

# tabs 
keybind = cmd+s>c=new_tab
keybind = cmd+period=next_tab
keybind = cmd+comma=previous_tab
#keybind = shift+comma=move_tab:-1
#keybind = shift+period=move_tab:1

# split
keybind = cmd+s>/=new_split:right
keybind = cmd+s>'=new_split:down

# split navigation
keybind = cmd+s>down=goto_split:bottom
keybind = cmd+s>up=goto_split:top
keybind = cmd+s>left=goto_split:left
keybind = cmd+s>right=goto_split:right

# split resizing
keybind = cmd+s>z=toggle_split_zoom
keybind = cmd+s>e=equalize_splits
keybind = cmd+s>shift+left=resize_split:left,20
keybind = cmd+s>shift+right=resize_split:right,20
keybind = cmd+s>shift+up=resize_split:up,20
keybind = cmd+s>shift+down=resize_split:down,20

copy-on-select = clipboard
